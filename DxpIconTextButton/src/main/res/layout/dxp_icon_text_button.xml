<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/icon_text_btn_width"
    android:layout_height="@dimen/icon_text_btn_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/selector_icon_text_button">

    <com.ford.avsdm.corewidgetlib.userprofile.DxpUserProfile
        android:id="@+id/icon_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/icon_btn_padding_left"
        app:border_width="0"
        app:isRounded="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@android:drawable/ic_menu_gallery"
        />

    <com.ford.avsdm.corewidgetlib.textview.DxpTextView
        android:id="@+id/text_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:paddingLeft="@dimen/text_btn_padding_left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icon_button"
        app:layout_constraintTop_toTopOf="parent"
        app:textType="l2"
        tools:text="Home"
        />
</androidx.constraintlayout.widget.ConstraintLayout>