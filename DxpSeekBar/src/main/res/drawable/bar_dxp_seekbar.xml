<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background"
        android:gravity="center_vertical|fill_horizontal">
        <shape
            android:shape="rectangle"
            android:tint="@color/text_btn_disabled">
            <corners android:radius="@dimen/bar_corner_radius" />
            <size android:height="@dimen/bar_height" />
            <solid android:color="@color/text_btn_disabled" />
        </shape>
    </item>

    <item
        android:id="@android:id/progress"
        android:gravity="center_vertical|fill_horizontal">
        <scale android:scaleWidth="100%">
            <shape
                android:shape="rectangle"
                android:tint="@color/brand_001">
                <corners android:radius="@dimen/bar_corner_radius" />
                <size android:height="@dimen/bar_height" />
                <solid android:color="@color/brand_001" />
            </shape>
        </scale>
    </item>

</layer-list>
